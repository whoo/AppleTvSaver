#!/bin/bash

[ ! -z $2 ] && PARAM="--wid=$2"

DIR="/usr/share/AppleMovie"
FILES="$DIR/screensavers"
KEYS="$DIR/input.conf"

MPV="/usr/bin/mpv"


exec ${MPV} --no-input-default-bindings  --input-conf $KEYS --really-quiet --no-audio --loop=inf   --no-osc  --no-osd-bar --panscan=1 --no-sub-ass -fs --fs-screen=all --shuffle --no-stop-screensaver  --no-stop-screensaver ${PARAM} ${FILES} 

